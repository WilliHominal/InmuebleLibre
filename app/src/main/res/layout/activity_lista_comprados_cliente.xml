<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LCC_drawer_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.cliente.ListaCompradosClienteActivity">

        <include layout="@layout/toolbar"
            android:id="@+id/LCC_toolbar"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/LCC_listaInmuebles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LCC_toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/LCC_menu_drawer"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:layout_width="280dp"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header_cliente"
        app:itemTextColor="#000000"
        app:itemIconTint="#000000"
        app:menu="@menu/menu_cliente" />

</androidx.drawerlayout.widget.DrawerLayout>